block content
	section.header
		.desktop-grid.mobile-grid
			include _nav-header.jade
			.title-wrapper
				.main-title-wrap.offset-2.col-15.offset-lg-2.col-lg-13
					h1.h1.cascade-mask
						span.mbrt-cascade.firstload.animate(data-cascade="fade-up" data-cascade-delay="0" data-cascade-delay-mobile="0") Crunchy Fruit

					h1.h1.cascade-mask
						span.mbrt-cascade.firstload.animate(data-cascade="fade-up" data-cascade-delay="1" data-cascade-delay-mobile="1") Snack â€”


				.circle-wrapper.offset-2.offset-lg-4.col-lg-4
